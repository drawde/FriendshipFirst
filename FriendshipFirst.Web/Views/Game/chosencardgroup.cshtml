                <li id="wolverine" data-teams="">
                    <h2>Wolverine</h2>
                    <img src="/images/defaulthead.png" alt="">
                </li>
            </ul>
        </div>

    </div>
    @Html.Partial("/Views/Addons/SignalRChatFrame.cshtml", null)
